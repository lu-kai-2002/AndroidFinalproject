<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 用户头像 + 昵称 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:src="@drawable/ic_avatar_default"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/textUsername"
                android:text="Rainie"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- 主图 -->
        <ImageView
            android:id="@+id/imageContent"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="16dp" />

        <!-- 内容描述 -->
        <TextView
            android:id="@+id/textContent"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#333"
            android:text="🍹我心中的顺德酒吧前三！！喝了78910杯…\n\n一家很有上海 feel 的小酒馆\n适合约小姐妹来微醺\n老板也会根据你的喜好来推荐"/>

        <!-- 跳转去酒吧页面 -->
        <Button
            android:id="@+id/buttonGoToBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去【爵士俱乐部】看看"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"/>


        <!-- 评论标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最新评论"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"/>

        <!-- 评论1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <ImageView
                android:src="@drawable/ic_avatar_default"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="10dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点小评"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="老板的推荐，是不是也包括了‘微醺’的自己？"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1月3日 · 广东"
                    android:textSize="12sp"
                    android:textColor="#888"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 评论2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <ImageView
                android:src="@drawable/ic_avatar_default"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="10dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="橙不忍岛"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="贵吗？"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1月5日 · 广东"
                    android:textSize="12sp"
                    android:textColor="#888"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
